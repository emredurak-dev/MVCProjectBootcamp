@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>user mail</th>
        <th>authority</th>
        <th>status</th>
        <th>make it passive</th>
        <th>change its permission</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminId</th>
            <td>@item.AdminUsername</td>
            <td>@item.AdminRole</td>
            <td>active</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.AdminId" class="btn btn-danger">make it passive</a></td>
            <td><a href="/Authorization/EditAdmin/@item.AdminId" class="btn btn-info">change permission</a></td>
        </tr>
    }
</table>
<a href="/Authorization/AddAdmin/" class="btn btn-primary">new admin permission</a>
